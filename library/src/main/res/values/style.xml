<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Text"/>
    <!--页面加载动画样式-->
    <style name="Progress_Loading">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">85dp</item>
        <item name="android:indeterminate">false</item>
        <item name="android:indeterminateDrawable">@drawable/wait_progress_animation_new</item>
    </style>

    <style name="Text.Loading">
        <item name="android:textSize">10sp</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:text">@string/txt_loading_tips</item>
    </style>

    <style name="Text.Loading.Dark">
        <item name="android:textColor">#9a9a9a</item>
    </style>

    <!--一级文字：17sp（话题详情话题标题、圈子详情圈子名称、漫画详情作品名称）-->
    <style name="txt_size_34_level_1">
        <item name="android:textSize">17sp</item>
    </style>
    <!--二级文字：15sp（顶部栏标题）-->
    <style name="txt_size_30_level_2" >
        <item name="android:textSize">15sp</item>
    </style>
    <!--三级文字：14sp（栏目标题、、列表名称、二级TAB、话题内容、数据反馈文字）-->
    <style name="txt_size_28_level_3" >
        <item name="android:textSize">14sp</item>
    </style>
    <!--四级文字：13sp 列表作品名称-->
    <style name="txt_size_26_level_4" >
        <item name="android:textSize">13sp</item>
    </style>
    <!--五级文字：12sp（话题预览内容、简介、更多按钮、用户昵称）-->
    <style name="txt_size_24_level_5" >
        <item name="android:textSize">12sp</item>
    </style>
    <!--六级文字：11sp（次要信息）-->
    <style name="txt_size_22_level_6">
        <item name="android:textSize">11sp</item>
    </style>
    <!--七级文字：10sp（次要信息）-->
    <style name="txt_size_20_level_7">
        <item name="android:textSize">10sp</item>
    </style>
</resources>